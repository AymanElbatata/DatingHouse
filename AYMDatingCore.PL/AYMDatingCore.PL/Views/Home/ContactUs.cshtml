@model ContactUsTBL_VM

@{
    ViewData["Title"] = "Contact us 💌";
}

<style>
    body {
        background: linear-gradient(135deg, #ffe6f0, #fff);
    }

    .contact-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
/*         padding: 40px 15px;
 */    }

    .contact-card {
        background: #fff;
        border-radius: 22px;
        box-shadow: 0 12px 35px rgba(214, 51, 132, 0.18);
        padding: 40px 35px;
        max-width: 520px;
        width: 100%;
    }

    .contact-title {
        color: #d63384;
        font-weight: 700;
    }

    .contact-subtitle {
        color: #6c757d;
        font-size: 1rem;
        margin-bottom: 30px;
    }

    .form-label2 {
        font-weight: 600;
        color: #d63384;
    }

    .form-control2 {
        border-radius: 14px;
        padding: 12px 16px;
        border: 1px solid #f1b6d1;
        transition: all 0.3s ease;
    }

        .form-control2:focus {
            border-color: #d63384;
            box-shadow: 0 0 0 0.15rem rgba(214, 51, 132, 0.25);
        }

    .btn-pink {
        background: linear-gradient(135deg, #ff5fa2, #ff85c2);
        border: none;
        border-radius: 30px;
        padding: 12px 30px;
        font-weight: 600;
        color: #fff;
        transition: all 0.3s ease;
        width: 100%;
    }

        .btn-pink:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(214, 51, 132, 0.35);
        }

    .contact-icon {
        font-size: 48px;
        margin-bottom: 10px;
    }

    .alert {
        animation: fadeInDown 0.6s ease;
    }

    @@keyframes fadeInDown {
         from{
            opacity: 0;
            transform: translateY(-10px);
        }
        to{
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="contact-wrapper">
    <div class="contact-card text-center">

        <div class="contact-icon">💌</div>

        <h2 class="contact-title mb-2">Contact Us</h2>
        <p class="contact-subtitle">
            We'd love to hear from you. Send us your message 💖
        </p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center rounded-pill mb-4"
                 style="background:#ffe6f0;border:none;color:#d63384;font-weight:600;">
                💌 @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="ContactUs" asp-controller="Home" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3 text-start">
                <label asp-for="Name" class="form-label form-label2"></label>
                <input asp-for="Name" class="form-control form-control2" placeholder="Your Name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3 text-start">
                <label asp-for="Email" class="form-label form-label2"></label>
                <input asp-for="Email" class="form-control form-control2" placeholder="Your Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-4 text-start">
                <label asp-for="Message" class="form-label form-label2"></label>
                <textarea asp-for="Message" class="form-control form-control2" rows="5"
                          placeholder="Write your message here..."></textarea>
                <span asp-validation-for="Message" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-pink">
                Send Message 💕
            </button>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
