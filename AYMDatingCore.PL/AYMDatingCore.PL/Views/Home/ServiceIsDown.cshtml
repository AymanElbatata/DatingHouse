@{
    ViewData["Title"] = "Service unavailable Now";
}

<div class="container d-flex align-items-center justify-content-center"
     style="min-height:70vh">

    <div class="text-center">

        <!-- Image -->
        <img src="~/Images/Main/unavailableNOW.jpg"
             alt="Service unavailable"
             class="img-fluid mb-4"
             style="max-width:320px; opacity:.9;" />

        <!-- Title -->
        <h2 class="fw-bold text-pink mb-2">
            Service Temporarily Unavailable
        </h2>

        <!-- Message -->
        <p class="text-muted fs-6">
            We’re currently performing maintenance or experiencing a short issue.<br />
            Please try again in a few minutes.
        </p>

    </div>
</div>