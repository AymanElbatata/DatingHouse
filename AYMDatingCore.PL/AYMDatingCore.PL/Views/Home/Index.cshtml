@model IEnumerable<AYMDatingCore.PL.Models.UserHistoryTBL_VM>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .btn-romantic {
        background-color: #ff1493;
        color: white;
        border-radius: 15px;
        padding: 6px 18px;
        transition: 0.3s;
    }

        .btn-romantic:hover {
            background-color: #e60073;
            transform: scale(1.05);
        }

    .text-pink {
        color: #ff1493;
    }

    .fixedimageIndex {
