
@{
    var appName = "MarryMe";
    var currentUserCounter = new CurrentUserCounterDTO();
    if (UnitOfWork.SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("User"))
        {
            var UserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
            currentUserCounter.CounterOfNewViews = UnitOfWork.UserViewRepository.GetAllCustomized(filter: a => a.IsDeleted == false && a.IsSeen == false && a.ReceiverAppUserId == UserId).Count();
            currentUserCounter.CounterOfNewLikes = UnitOfWork.UserLikeRepository.GetAllCustomized(filter: a => a.IsDeleted == false && a.IsSeen == false && a.ReceiverAppUserId == UserId).Count();
            currentUserCounter.CounterOfNewMessages = UnitOfWork.UserMessageRepository.GetAllCustomized(filter: a => a.IsDeleted == false && a.IsSeen == false && a.ReceiverAppUserId == UserId).Count();
            currentUserCounter.CounterOfNewFavorites = UnitOfWork.UserFavoriteRepository.GetAllCustomized(filter: a => a.IsDeleted == false && a.IsSeen == false && a.ReceiverAppUserId == UserId).Count();
            currentUserCounter.CounterOfNewBlocks = UnitOfWork.UserBlockRepository.GetAllCustomized(filter: a => a.IsDeleted == false && a.IsSeen == false && a.ReceiverAppUserId == UserId).Count();
        }  
    }

}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#ff6b8b">
    <title>@ViewData["Title"] - Dating House</title>


