                                <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="UserBlocks">Blocks (<span id="currentUserCounter_Blocks">@currentUserCounter.CounterOfNewBlocks</span>)</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index" asp-route-UserName="@User.Identity?.Name">Profile</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout" asp-route-UserName="@User.Identity?.Name">Sign Out</a></li>
                            }
                            else
                            {
                               <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index" asp-route-UserName="@User.Identity?.Name">Admin Panel</a></li>
                               <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout" asp-route-UserName="@User.Identity?.Name">Sign Out</a></li>
                            }
                        }
                        else
                        {
@*                             <li class="nav-item"><a class="btn btn-love ms-2" asp-controller="Account" asp-action="Login">Join Now ❤️</a></li>
 *@                            <li class="nav-item"><a class="btn ms-2" asp-controller="Account" asp-action="Login">Join Now ❤️</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <partial name="_SearchBarPartial" model="new UserMainSearchDTO { Countries = UnitOfWork.CountryTBLRepository.GetAllCustomized(
                filter: a => a.IsDeleted == false).Select(c => new SelectListItem
                                                             {Value = c.ID.ToString(),Text = c.Name}).ToList(), Genders = UnitOfWork.GenderTBLRepository.GetAllCustomized(
                filter: a => a.IsDeleted == false).Select(c => new SelectListItem
                                                             {Value = c.ID.ToString(),Text = c.Name}).ToList() }" />

    </header>


    <main role="main" class="container mt-4">
        @RenderBody()
    </main>
        <!-- Footer -->
    <div class="back-to-top mt-2" onclick="window.scrollTo({top: 0, behavior: 'smooth'})">
        Back to top
    </div>
    <footer class="text-center py-3 mt-5 romantic-footer">
        <p>💖 &copy; @DateTime.Now.Year - @appName | Find your true love 💕</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
