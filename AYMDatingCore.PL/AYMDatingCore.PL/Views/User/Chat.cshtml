                            {
                                <audio controls style="width:100%;">
                                    <source src="~/AudioUsers/@msg.AudioDataUrl" type="audio/webm">
                                    Your browser does not support audio playback.
                                </audio>
                            }
                            else
                            {
                                @if (msg.FileDataUrl != null)
                                {
                                    var filePath = Url.Content($"~/FileUsers/{msg.FileDataUrl}");
                                    var fileExtension = System.IO.Path.GetExtension(msg.FileDataUrl).ToLower();

                                    if (fileExtension == ".jpg" || fileExtension == ".jpeg" || fileExtension == ".png" || fileExtension == ".gif")
                                    {
                                        <div class="chat-image-preview">
                                            <a href="@filePath" target="_blank">
                                                <img src="@filePath" alt="Image preview" />
                                            </a>
                                        </div>
                                    }
                                    else if (fileExtension == ".mp4" || fileExtension == ".webm" || fileExtension == ".ogg")
                                    {
                                        <div class="chat-video-preview">
                                            <video controls>
                                                <source src="@filePath" type="video/@fileExtension.TrimStart('.')">
                                                Your browser does not support video playback.
                                            </video>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="chat-file-preview">
                                            <div class="file-icon">
                                                <i class="fa fa-file"></i>
                                            </div>
                                            <div class="file-info">
                                                <a href="@filePath" target="_blank" download class="file-name">@msg.FileDataUrl</a>
                                                <small class="file-size">File</small>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </li>
                    }
                }
                else
