                    <h4 id="callStatus">Connecting...</h4>
                    <audio id="remoteAudio" autoplay></audio>
                </div>
            }
            else
            {
                <p class="text-center text-danger mt-3">🚫 Sorry, you can’t send messages — there is blocking!.</p>
            }
