<script>
    let localStream;
    let peerConnection;
    const configuration = { iceServers: [{ urls: "stun:stun.l.google.com:19302" }] };

    const callBtn = document.getElementById("callBtn");
    const hangupBtn = document.getElementById("hangupBtn");
    const ringtone = document.getElementById("ringtone");
    const callAcceptSound = document.getElementById("callAcceptSound");
    const callRejectSound = document.getElementById("callRejectSound");
    const callEndSound = document.getElementById("callEndSound");
    const callArea = document.getElementById("callArea");
    const remoteAudio = document.getElementById("remoteAudio");
    const callStatus = document.getElementById("callStatus");

    const currentUser = "@Model.SenderAppUser.Id";
    const receiverUser = "@Model.ReceiverAppUser.Id";

    // --- 1️⃣ Call button clicked ---
    callBtn.onclick = async () => {
        ringtone.play();
        callStatus.innerText = `Calling ${'@Model.ReceiverAppUser.UserName'}...`;
        callArea.style.display = "block";
        await connection.invoke("CallUser", currentUser, receiverUser);
    };

    // --- 2️⃣ When incoming call arrives ---
    connection.on("IncomingCall", async (caller) => {
        IsThereBlockingBetweenUsers();

        ringtone.play();
        const accept = confirm(`📞 '@Model.SenderAppUser.UserName' is calling you. Accept?`);
         if (accept) {
            ringtone.pause();
            callAcceptSound.play();
            await connection.invoke("AcceptCall", caller, currentUser);
            startVoiceCall(caller, true);
        } else {
            await connection.invoke("RejectCall", caller, currentUser);
        }
    });

    // --- 3️⃣ When call accepted ---
    connection.on("CallAccepted", (receiver) => {
        ringtone.pause();
        callAcceptSound.play();
        startVoiceCall(receiver, false);
    });

    // --- 4️⃣ When call rejected ---
    connection.on("CallRejected", (receiver) => {
        ringtone.pause();
        callRejectSound.play();
        alert(`${'@Model.ReceiverAppUser.UserName'} rejected your call.`);
        callArea.style.display = "none";
    });

    // --- 5️⃣ Start WebRTC connection ---
    async function startVoiceCall(remoteUser, isReceiver) {
        callBtn.style.display = "none";
        hangupBtn.style.display = "inline-block";
        callStatus.innerText = "Connected 🎙️";
        callArea.style.display = "block";

        localStream = await navigator.mediaDevices.getUserMedia({ audio: true });
        peerConnection = new RTCPeerConnection(configuration);

        // Stream local mic audio
        localStream.getTracks().forEach(track => peerConnection.addTrack(track, localStream));

        // Receive remote audio
        peerConnection.ontrack = event => {
            remoteAudio.srcObject = event.streams[0];
        };

        // ICE candidate exchange
        peerConnection.onicecandidate = event => {
            if (event.candidate) {
                connection.invoke("SendIceCandidate", remoteUser, JSON.stringify(event.candidate));
            }
        };

        if (isReceiver) {
            connection.on("ReceiveOffer", async (offerJson) => {
                await peerConnection.setRemoteDescription(new RTCSessionDescription(JSON.parse(offerJson)));
                const answer = await peerConnection.createAnswer();
                await peerConnection.setLocalDescription(answer);
                connection.invoke("SendAnswer", remoteUser, JSON.stringify(answer));
            });
        } else {
            const offer = await peerConnection.createOffer();
            await peerConnection.setLocalDescription(offer);
            connection.invoke("SendOffer", remoteUser, JSON.stringify(offer));
        }

        connection.on("ReceiveAnswer", async (answerJson) => {
            await peerConnection.setRemoteDescription(new RTCSessionDescription(JSON.parse(answerJson)));
        });

        connection.on("ReceiveIceCandidate", async (candidateJson) => {
            await peerConnection.addIceCandidate(new RTCIceCandidate(JSON.parse(candidateJson)));
        });
    }

    // --- 6️⃣ Hang up ---
        hangupBtn.onclick = async () => {
        if (peerConnection) {
            peerConnection.close();
            peerConnection = null;
        }

        callArea.style.display = "none";
        callBtn.style.display = "inline-block";
        hangupBtn.style.display = "none";
        ringtone.pause();
        callAcceptSound.pause();
        callStatus.innerText = "";

        SaveinDB("@Model.ReceiverAppUser.UserName","Voice Call had been ended..");
        connection.invoke("SendMessageToGroup", "@Model.GroupName", "Voice Call had been ended..","@Model.SenderAppUser.UserName");

        // 🔹 Notify the other user that the call has ended
        await connection.invoke("EndCall", currentUser, receiverUser);
    };

    // --- 7️⃣ Listen for remote hang up ---
    connection.on("CallEnded", (userWhoEnded) => {
        if (peerConnection) {
            peerConnection.close();
            peerConnection = null;
        }

        IsThereBlockingBetweenUsers();

        callArea.style.display = "none";
        callBtn.style.display = "inline-block";
        hangupBtn.style.display = "none";
        ringtone.pause();
        callAcceptSound.pause();
        callEndSound.play();
      let userWhoEndedUserName = userWhoEnded == '@Model.Users_VM.FirstOrDefault().Id' ? '@Model.Users_VM.FirstOrDefault().UserName' : '@Model.Users_VM.LastOrDefault().UserName';
        callStatus.innerText = `${userWhoEndedUserName} ended the call.`;
        alert(`${userWhoEndedUserName} ended the call.`)
    });

</script>