                    <button id="callBtn" class="btn btn-success"><i class="fa fa-phone"></i> Call</button>
                    <button id="hangupBtn" class="btn btn-danger" style="display:none;"><i class="fa fa-phone-slash"></i> End</button>
                </div>

                <!-- 🔔 Ringing Audio -->
                <audio id="ringtone" src="~/Sounds/MakeCall.mp3" preload="auto"></audio>
                <audio id="callAcceptSound" src="~/Sounds/StartCall.mp3" preload="auto"></audio>
                <audio id="callRejectSound" src="~/Sounds/RejectCall.mp3" preload="auto"></audio>
                <audio id="callEndSound" src="~/Sounds/EndCall.mp3" preload="auto"></audio>

