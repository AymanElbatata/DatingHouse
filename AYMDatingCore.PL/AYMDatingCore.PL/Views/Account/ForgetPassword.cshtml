@model AYMDatingCore.PL.DTO.ForgetPasswordDTO

@{
    ViewData["Title"] = "Forgot Password";
}


<style>
    /* Page Background */
    body {
        background: linear-gradient(135deg, #ff9a9e, #fad0c4, #fcb69f);
        background-size: 200% 200%;
        animation: gradientShift 6s ease infinite;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    @@keyframes gradientShift {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    /* Center Container */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    /* Card Box */
    .login-box {
        background: #fff;
        border-radius: 16px;
        padding: 40px 35px;
        width: 380px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        text-align: center;
        animation: fadeIn 0.7s ease;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Title */
    .login-title {
        font-weight: 700;
        font-size: 28px;
        color: #e94057;
        margin-bottom: 20px;
        letter-spacing: 0.5px;
    }

    /* Form Group */
    .form-group {
        margin-bottom: 18px;
        text-align: left;
    }

    .form-label {
        display: block;
        font-weight: 600;
        font-size: 13px;
        margin-bottom: 6px;
        color: #555;
    }

    /* Input Fields */
    .form-input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
        transition: 0.3s ease;
    }

        .form-input:focus {
            outline: none;
            border-color: #e94057;
            box-shadow: 0 0 8px rgba(233, 64, 87, 0.3);
        }

    .text-danger {
        color: #e94057;
        font-size: 12px;
        margin-top: 3px;
        display: block;
    }

    /* Button */
    .login-btn {
        width: 100%;
        background: linear-gradient(45deg, #e94057, #f27121);
        border: none;
        border-radius: 8px;
        padding: 10px;
        color: #fff;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .login-btn:hover {
            background: linear-gradient(45deg, #d82c5d, #f26029);
            box-shadow: 0 4px 15px rgba(233, 64, 87, 0.4);
        }

    /* Agreement Section */
    .login-agreement {
        font-size: 12px;
        color: #555;
        margin: 20px 0;
        line-height: 1.6;
    }

        .login-agreement a {
            color: #e94057;
            text-decoration: none;
            font-weight: 600;
        }

            .login-agreement a:hover {
                text-decoration: underline;
            }

    /* Divider */
    .login-divider {
        text-align: center;
        position: relative;
        margin: 25px 0;
        font-size: 13px;
        color: #777;
    }

        .login-divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background-color: #eee;
        }

        .login-divider span {
            background-color: #fff;
            padding: 0 10px;
            position: relative;
            z-index: 2;
        }

    /* Create Account Button */
    .create-account-btn {
        width: 100%;
        display: inline-block;
        background: linear-gradient(45deg, #fcb69f, #ff9a9e);
        border: none;
        border-radius: 8px;
        padding: 10px;
        color: #fff;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
        transition: 0.3s ease;
    }

        .create-account-btn:hover {
            background: linear-gradient(45deg, #ff758c, #ff7eb3);
            box-shadow: 0 4px 15px rgba(255, 118, 136, 0.4);
        }

    /* Validation Summary */
    .validation-summary {
        color: #e94057;
        background-color: #ffe3e8;
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-size: 13px;
    }

    /* Help Link */
    .login-help {
        margin-top: 15px;
        font-size: 13px;
    }

        .login-help a {
            color: #e94057;
            font-weight: 500;
            text-decoration: none;
        }

            .login-help a:hover {
                text-decoration: underline;
            }

    /* Responsive */
    @@media (max-width: 480px) {
        .login-box

    {
        width: 90%;
        padding: 30px 20px;
    }

    .login-title {
        font-size: 24px;
    }

    }
</style>

<!-- Forgot Password UI -->
<div class="login-container">
    <div class="login-box">
        <h1 class="login-title">Forgot Password 💌</h1>

        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form id="forgotPasswordForm" method="post" asp-controller="Account" asp-action="ForgetPassword">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="form-label" for="email">Email Address</label>
                <input type="email" value="" id="email" name="email" class="form-input" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span id="emailError" class="text-danger"></span>
            </div>

            <button type="submit" class="login-btn">Reset Password</button>
        </form>

        <p class="login-agreement">
            By continuing, you agree to Dating House
            <a asp-controller="Home" asp-action="ConditionsofUse">Terms</a> and
            <a asp-controller="Home" asp-action="PrivacyNotice">Privacy Policy</a>.
        </p>

        <div class="login-help">
            <a asp-controller="Home" asp-action="HelpPage">
                ❤️ Need help?
            </a>
        </div>

        <div class="login-divider">
            <span>New to Dating House?</span>
        </div>

        <a asp-controller="Account" asp-action="Register" class="create-account-btn">
            Create Your Dating House Account
        </a>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Form validation
    $('#forgotPasswordForm').on('submit', function(e) {

            let isValid = true;

            // Reset error messages
            $('.text-danger').text('');

            // Validate email
            const email = $('#email').val().trim();
            if (!email) {
                $('#emailError').text('Please enter your email address');
                isValid = false;
            } else if (!isValidEmail(email)) {
                $('#emailError').text('Please enter a valid email address');
                isValid = false;
            }

            // Prevent form submission if validation fails
            if (!isValid) {
                e.preventDefault();
            }
        });

        // Email validation function
            function isValidEmail(email) {
                const re = /^(([^<>()\[\]\\.,;:\s@@"]+(\.[^<>()\[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z0-9-]+\.)+[a-zA-Z]{2,}))$/;
                return re.test(String(email).toLowerCase());
            }

        // Real-time validation
        $('#email').on('blur', function() {
            const email = $(this).val().trim();
            if (!email) {
                $('#emailError').text('Please enter your email address');
            } else if (!isValidEmail(email)) {
                $('#emailError').text('Please enter a valid email address');
            } else {
                $('#emailError').text('');
            }
        });

    });
</script>